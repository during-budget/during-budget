{
  "ts-node": { "files": true },
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "typeRoots": ["./node_modules/@types", "./@types"],
    "baseUrl": ".",
    "paths": {
      "@models/*": ["src/models/*"],
      "@controllers/*": ["src/api/controllers/*"]
    },
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.d.ts", "**/*.json"],
  "exclude": ["**/test/*"]
}
