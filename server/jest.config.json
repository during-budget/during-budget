{
  "preset": "ts-jest",
  "rootDir": ".",
  "testMatch": ["**/tests/auth.test.ts"],
  "testEnvironment": "node",
  "resetMocks": true,
  "clearMocks": true,
  "moduleNameMapper": {
    "@models/(.*)$": "<rootDir>/models/$1",
    "@controllers/(.*)$": "<rootDir>/controllers/$1",
    "@logger": "<rootDir>/log/logger"
  },
  "setupFiles": ["<rootDir>/_setup.ts"]
}
