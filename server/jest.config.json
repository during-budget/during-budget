{
  "preset": "ts-jest",
  "rootDir": ".",
  "testMatch": ["**/tests/services/user.test.ts"],
  "testEnvironment": "node",
  "resetMocks": true,
  "clearMocks": true,
  "moduleNameMapper": {
    "@models/(.*)$": "<rootDir>/src/models/$1",
    "@controllers/(.*)$": "<rootDir>/src/api/controllers/$1",
    "src/(.*)$": "<rootDir>/src/$1"
  }
}
